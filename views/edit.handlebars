<div class="container">
  <div class="row mt-5">
    <div class="col-md-7 col-sm-12 col-xs-12 mx-auto">
      <div class="card card-body border-0">
        <div class="row my-5">
          <span class="text-danger col-2 text-right">*必填</span>
          <h1 class="col-8 text-center edit-title">請修改你的支出</h1>
        </div>
        {{> messages }}
        <form action="/record/{{record.id}}?_method=PUT" method="POST">
          <!-- name -->
          <div class="form-group row">
            <label for="name" class="col-2 text-right"><span class="text-danger">*</span> 名稱 :</label>
            <div class="col-8">
              <input type="text" class="form-control" name="name" id="name" value="{{{record.name}}}" maxlength="12"
                required>
            </div>
          </div>
          <!-- merchant -->
          <div class="form-group row">
            <label for="merchant" class="col-2 text-right">商店 :</label>
            <div class="col-8">
              <input type="text" class="form-control" name="merchant" id="merchant" value="{{{record.merchant}}}"
                maxlength="12">
            </div>
          </div>
          <!-- date -->
          <div class="form-group row">
            <label for="date" class="col-2 text-right"><span class="text-danger">*</span> 日期 :</label>
            <div class="col-8">
              <input type="date" class="form-control" name="date" id="date" value="{{ dateFormat record.date}}"
                maxlength="10" required>
              <span class="warning-block ml-2">日期區間: 2019. 1. 1~2019. 12. 31</span>
            </div>
          </div>
          <!-- category -->
          <div class="form-group row">
            <label for="category" class="col-2 text-right"><span class="text-danger">*</span> 類別 :</label>
            <div class="col-8">
              <select name="category" class="form-control" id="category" required>
                <option value="" selected>類別</option>
                <option value="living" {{#ifEquals record.category "living"}} selected {{/ifEquals}}>家居物業</option>
                <option value="traffic" {{#ifEquals record.category "traffic"}} selected {{/ifEquals}}>交通出行
                </option>
                <option value="entertainment" {{#ifEquals record.category "entertainment"}} selected {{/ifEquals}}>休閒娛樂
                </option>
                <option value="food" {{#ifEquals record.category "food"}} selected {{/ifEquals}}>餐飲食品</option>
                <option value="other" {{#ifEquals record.category "other"}} selected {{/ifEquals}}>其他</option>
              </select>
            </div>
          </div>
          <!-- amount -->
          <div class="form-group row">
            <label for="amount" class="col-2 text-right"><span class="text-danger">*</span> 金額 :</label>
            <div class="col-8">
              <input type="number" class="form-control" name="amount" id="amount" value="{{{record.amount}}}"
                maxlength="8" required>
            </div>
          </div>
          <!-- button -->
          <div class="form-group text-center mt-5">
            <button class="btn btn-info mr-4">確認修改</button>
            <a href="/" class="btn btn btn-secondary">取消</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>